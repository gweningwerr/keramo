{% extends "AppBundle:Adminka:layout.html.twig" %}
{% block content %}
	<div class="col-sm-10">
		<div class="row">
			<div class="panel-body">
				<form action="{{ formAction }}" class="form-horizontal row-border">
					{#<input type="hidden" name="password" value="{{ user.password }}" />#}

					<div class="form-group">
						<label class="col-sm-2 control-label" for="username">Логин</label>
						<div class="col-sm-10">
							<input type="text" id="username" name="username" value="{{ user.username }}" class="form-control" required="required" autocomplete="off" readonly />
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="email">Email</label>
						<div class="col-sm-10">
							<input type="text" id="email" name="email" value="{{ user.email }}" class="form-control" required="required" autocomplete="off" />
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="roles">Роли</label>
						<div class="col-sm-10">
							<select name="roles[]" id="roles" class="select2" autocomplete="off" multiple >
								{% for role, arr in roles %}
									{% set selected = role in user.roles ? 'selected' : '' %}
									<option value="{{role}}" {{ selected }}>{{role}}</option>
								{% endfor %}
							</select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="new_password">Новый пароль</label>
						<div class="col-sm-10">
							<input id="new_password" name="new_password"  class="form-control" type="password" autocomplete="off">
						</div>
					</div>
				</form>
				<div class="panel-footer">
					<div class="row">
						<div class="col-sm-10 col-sm-offset-2">
							<a href="" class="btn-primary btn save-form"> Сохранить </a>
							<a href="{{ linkList }}" class="btn-default btn"> Вернуться к списку </a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-sm-2">
		<div class="row">
			<ul class="list-unstyled small">
				<li>Поледний вход: {{ user.lastLogin|date("m.d.Y") }}</li>
				<li>Изменение пароля: {{ user.passwordRequestedAt|date("m.d.Y") }}</li>
			</ul>
		</div>
	</div>


{% endblock content %}